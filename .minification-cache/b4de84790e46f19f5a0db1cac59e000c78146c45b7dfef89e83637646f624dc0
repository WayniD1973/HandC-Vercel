var sidebarHidden=!0;function showSearch(){document.querySelector(".navItems-left").style.display="none",document.querySelector(".navItems-right").style.display="none",document.querySelector(".searchBox").style.display="flex"}function hideSearch(){document.querySelector(".navItems-left").style.display="flex",document.querySelector(".navItems-right").style.display="flex",document.querySelector(".searchBox").style.display="none"}function showSidebar(){document.querySelector(".sidebar").classList.add("openSidebar"),sidebarHidden=!1}function hideSidebar(){document.querySelector(".sidebar").classList.remove("openSidebar"),sidebarHidden=!0}setTimeout(function(){document.querySelector(".searchBoxInput").addEventListener("keyup",()=>{""==document.querySelector(".searchBoxInput").value?document.querySelector(".searchBoxButton").innerText="Cancel":document.querySelector(".searchBoxButton").innerText="Search"})},500),document.querySelector(".navItem-search").addEventListener("click",()=>{showSearch()}),document.querySelector(".searchBoxButton").addEventListener("click",()=>{hideSearch()}),document.querySelector(".navbarTwo hc-menuButton").addEventListener("click",()=>{(1==sidebarHidden?showSidebar:hideSidebar)()});