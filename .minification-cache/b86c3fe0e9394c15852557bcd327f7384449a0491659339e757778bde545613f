var i=1,direction="forward",pauseCarouselButton=document.querySelector(".pauseCarouselButton"),unpauseCarouselButton=document.querySelector(".unpauseCarouselButton"),slideShowPaused=!(unpauseCarouselButton.style.display="none");function cycleForward(){direction="forward",document.getElementById("carouselBarItem1").style.background="unset",document.getElementById("carouselBarItem2").style.background="unset",document.getElementById("carouselBarItem3").style.background="unset",document.querySelector(".productCard1").style.display="none",document.querySelector(".productCard2").style.display="none",document.querySelector(".productCard3").style.display="none",document.getElementById("carouselBarItem"+i).style.background="#a88d8d",document.querySelector(".productCard"+i).style.display="block",i=i<3?++i:1}function cycleBackward(){direction="backward",document.getElementById("carouselBarItem1").style.background="unset",document.getElementById("carouselBarItem2").style.background="unset",document.getElementById("carouselBarItem3").style.background="unset",document.querySelector(".productCard1").style.display="none",document.querySelector(".productCard2").style.display="none",document.querySelector(".productCard3").style.display="none",document.getElementById("carouselBarItem"+i).style.background="#a88d8d",document.querySelector(".productCard"+i).style.display="block",i=1<i?--i:3}pauseCarouselButton.addEventListener("click",()=>{slideShowPaused=!0,unpauseCarouselButton.style.display="unset",pauseCarouselButton.style.display="none"}),unpauseCarouselButton.addEventListener("click",()=>{slideShowPaused=!1,pauseCarouselButton.style.display="unset",unpauseCarouselButton.style.display="unset"}),cycleForward(),cycleForward(),document.querySelector(".carouselBarItemArrowLeft").addEventListener("click",()=>{cycleBackward()}),document.querySelector(".carouselBarItemArrowRight").addEventListener("click",()=>{cycleForward()}),setInterval(function(){1!=slideShowPaused&&cycleForward()},5e3);var cardElements=document.querySelectorAll(".productCard");cardElements.forEach(e=>{e.style.backgroundImage="url("+e.getAttribute("background")});