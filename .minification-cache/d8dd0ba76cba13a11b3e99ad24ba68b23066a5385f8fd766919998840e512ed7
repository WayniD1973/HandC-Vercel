var sidebarHidden=!0,sidebar=document.querySelector(".sidebar"),sidebarStyles=window.getComputedStyle(sidebar);function showSearch(){document.querySelector(".navItems-left").style.display="none",document.querySelector(".navItems-right").style.display="none",document.querySelector(".searchBox").style.display="flex"}function hideSearch(){document.querySelector(".navItems-left").style.display="flex",document.querySelector(".navItems-right").style.display="flex",document.querySelector(".searchBox").style.display="none"}function showSidebar(){document.querySelector(".sidebar").style.right="0%",sidebarHidden=!1}function hideSidebar(){document.querySelector(".sidebar").style.right="-"+document.querySelector(".sidebar").style.width,sidebarHidden=!0}document.querySelector(".searchBoxInput").addEventListener("keyup",()=>{""==document.querySelector(".searchBoxInput").value?document.querySelector(".searchBoxButton").innerText="Cancel":document.querySelector(".searchBoxButton").innerText="Search"}),document.querySelector(".navItem-search").addEventListener("click",()=>{showSearch()}),document.querySelector(".searchBoxButton").addEventListener("click",()=>{hideSearch()}),document.querySelector(".navbarTwo hc-menuButton").addEventListener("click",()=>{showSidebar()}),document.querySelector(".sidebar hc-menuButton").addEventListener("click",()=>{hideSidebar()}),setInterval(()=>{1==sidebarHidden&&(console.log(sidebarStyles.getPropertyValue("width")),console.log("-"+String(parseFloat(sidebarStyles.getPropertyValue("width"))+50)))},100);