var option="login";function changeOption(){option="login"==option?(document.getElementById("leftHeader").innerText="Sign up to H&C",document.getElementById("loginButton").innerText="Sign up",document.title="Signup | H&C","signup"):("signup"==option?(document.getElementById("leftHeader").innerText="Sign up to H&C",document.getElementById("loginButton").innerText="Sign up",document.title="Signup | H&C"):(document.getElementById("leftHeader").innerText="Log in to H&C",document.getElementById("loginButton").innerText="Log in",document.title="Login | H&C"),"login")}document.getElementById("loginButton").addEventListener("click",()=>{"login"==option?fetch("https://login-finished.wumpus-dev.repl.co/login",{method:"POST",headers:{"Content-Type":"application/json"},body:JSON.stringify({username:document.getElementById("usernameInput").value,password:document.getElementById("usernameInput").value})}).then(e=>e.json()).then(e=>console.log(JSON.stringify(e))):fetch("https://login-finished.wumpus-dev.repl.co/signup",{method:"POST",headers:{"Content-Type":"application/json"},body:JSON.stringify({username:document.getElementById("usernameInput").value,password:document.getElementById("passwordInput").value})}).then(e=>e.json()).then(e=>console.log(JSON.stringify(e)))});