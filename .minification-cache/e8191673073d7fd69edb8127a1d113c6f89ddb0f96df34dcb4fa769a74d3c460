var i=1,direction="forward";function cycleForward(){direction="forward",document.getElementById("carouselBarItem1").style.color="black",document.getElementById("carouselBarItem2").style.color="black",document.getElementById("carouselBarItem3").style.color="black",document.getElementById("carouselBarItem"+i).style.color="red",i=i<3?++i:1}function cycleBackward(){direction="backward",document.getElementById("carouselBarItem1").style.color="black",document.getElementById("carouselBarItem2").style.color="black",document.getElementById("carouselBarItem3").style.color="black",document.getElementById("carouselBarItem"+i).style.color="red",i=1<i?--i:3}setInterval(function(){("forward"===direction?cycleForward:cycleBackward)()},1e3);