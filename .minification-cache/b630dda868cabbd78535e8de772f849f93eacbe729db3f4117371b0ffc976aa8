var sidebarWidth="35%";function showSearch(){document.querySelector(".navItems-left").style.display="none",document.querySelector(".navItems-right").style.display="none",document.querySelector(".searchBox").style.display="flex"}function hideSearch(){document.querySelector(".navItems-left").style.display="flex",document.querySelector(".navItems-right").style.display="flex",document.querySelector(".searchBox").style.display="none"}function showSidebar(){document.querySelector(".sidebar").style.display="block",setTimeout(()=>{document.querySelector(".sidebar").style.width=sidebarWidth},10)}function hideSidebar(){document.querySelector(".sidebar").style.width="0%",setTimeout(()=>{document.querySelector(".sidebar").style.display="none"},550)}document.querySelector(".searchBoxInput").addEventListener("keyup",()=>{""==document.querySelector(".searchBoxInput").value?document.querySelector(".searchBoxButton").innerText="Cancel":document.querySelector(".searchBoxButton").innerText="Search"}),document.querySelector(".navItem-search").addEventListener("click",()=>{showSearch()}),document.querySelector(".searchBoxButton").addEventListener("click",()=>{hideSearch()}),document.querySelector(".navbarTwo hc-menuButton").addEventListener("click",()=>{showSidebar()}),document.querySelector(".sidebar hc-menuButton").addEventListener("click",()=>{hideSidebar()});let match=window.matchMedia("(max-width: 480px)");function handleChange(e){e.matches&&(sidebarWidth="40%")}match.addListener(handleChange),handleChange(match);