var i=1,direction="forward";function cycleForward(){document.getElementById("div1").style.color="black",document.getElementById("div2").style.color="black",document.getElementById("div3").style.color="black",document.getElementById("div"+i).style.color="red",i=i<3?++i:1}function cycleBackward(){document.getElementById("div1").style.color="black",document.getElementById("div2").style.color="black",document.getElementById("div3").style.color="black",document.getElementById("div"+i).style.color="red",i=1<i?--i:3}setInterval(function(){("forward"===direction?cycleForward:cycleBackward)()},1e3);