var option="login";function changeOption(){option="login"==option?(document.getElementById("leftHeader").innerText="Sign up to H&C",document.getElementById("loginButton").innerText="Sign up",document.getElementById("otherOptionLink").innerText="Log In!",document.getElementById("otherOptionText").innerText="Already have an account?",document.title="Signup | H&C","signup"):(document.getElementById("leftHeader").innerText="Log in to H&C",document.getElementById("loginButton").innerText="Log in",document.getElementById("otherOptionLink").innerText="Sign Up!",document.getElementById("otherOptionText").innerText="Don't have an account?",document.title="Login | H&C","login")}document.getElementById("loginButton").addEventListener("click",()=>{("login"==option?fetch("https://login-finished.wumpus-dev.repl.co/login",{method:"POST",headers:{"Content-Type":"application/json"},body:JSON.stringify({username:document.getElementById("usernameInput").value,password:document.getElementById("passwordInput").value})}).then(e=>e.json()).then(e=>console.log(e.access_token)).then(e=>createCookie("connectionToken",e.access_token,30)):(fetch("https://login-finished.wumpus-dev.repl.co/signup",{method:"POST",headers:{"Content-Type":"application/json"},body:JSON.stringify({username:document.getElementById("usernameInput").value,password:document.getElementById("passwordInput").value})}),fetch("https://login-finished.wumpus-dev.repl.co/login",{method:"POST",headers:{"Content-Type":"application/json"},body:JSON.stringify({username:document.getElementById("usernameInput").value,password:document.getElementById("passwordInput").value})}).then(e=>e.json()).then(e=>createCookie("connectionToken",e.access_token,30)))).then(window.location.replace("/"))});